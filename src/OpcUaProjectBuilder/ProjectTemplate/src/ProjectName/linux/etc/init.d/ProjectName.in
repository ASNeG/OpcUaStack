. /lib/lsb/init-functions


NAME=OpcUaServer
DAEMON="/usr/bin/OpcUaServer@OPCUASTACK_VERSION_MAJOR@"
SERVICE="ProjectName"
OPTS="/etc/OpcUaStack/ProjectName/OpcUaServer.xml"
PID=/var/run/${SERVICE}.pid

SCRIPTNAME=/etc/init.d/$NAME

do_start()
{
    echo "Start $NAME ..."
    export LD_LIBRARY_PATH=/usr/local/lib/OpcUaStack/:$LD_LIBRARY_PATH
    start-stop-daemon --start --quiet --background --make-pidfile --pidfile $PID --exec $DAEMON -- $OPTS
    echo "STATUS= $?"
}

do_stop()
{
    echo "Stopping $NAME ..."
    start-stop-daemon --stop --signal 2 --retry 5 --pidfile $PID --exec $DAEMON
    rm $PID
}

do_status()
{
    start-stop-daemon --status --exec $DAEMON
    if [ $? -eq 0 ]; then
        echo "process $DAMEON running";
    else
        echo "process $DAMEON NOT running";
    fi
}


case "$1" in
    start)
        echo "Start $NAME services ..."
	do_start
        echo "  started."
        ;;
    stop)
        do_stop
        echo "  stopped."
        ;;
    restart)
        do_stop
        do_start
        echo "  done."
        ;;
    status)
	do_status
	;;
    *)
        echo "Usage: $SCRIPTNAME {start|stop|restart|status}" >&2
        exit 3
        ;;
esac



